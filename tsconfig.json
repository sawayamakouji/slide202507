{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["dom", "es2022"],
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": [
      "@remotion/cli/config"
    ]
  },
  "include": ["src"]
}